@model Category

@{
    ViewData["Title"] = Model.Name; 
}

<h2>@Model.Name</h2>

<h3>Products in this Category</h3>

@if (Model.Products != null && Model.Products.Count > 0)
{
    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">Energy: @product.Energy kcal</p>
                        <p class="card-text">Fat: @product.Fat g</p>
                        <p class="card-text">Carbohydrates: @product.Carbohydrates g</p>
                        <p class="card-text">Protein: @product.Protein g</p>
                        <a href="@Url.Action("Details", "Product", new { id = product.ProductId })" class="btn btn-primary">View Product</a>
                        <a href="@Url.Action("Delete", "Product", new { id = product.ProductId })" class="btn btn-danger">Delete</a>

                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No products available in this category.</p>
}

<a asp-action="Index" class="btn btn-secondary">Back to Category</a>