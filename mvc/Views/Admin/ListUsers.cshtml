@model IEnumerable<mvc.DAL.ViewModels.ListUsersViewModel>

@{
    ViewData["Title"] = "Users";
}


<div class="text-center mb-4"> 
    <h1>Users</h1>
    <p class="text-muted">
        Welcome to User dashboard Here, you can manage all users!
    </p>
</div>

    <table class="table">
        <thead>
            <tr>
                <th>User mail</th>
                <th>Role</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var appUser in Model)
            {
                <tr>
                    <td>@appUser.user?.Email</td>
                    <td>@appUser.Role</td>
                    <td><a asp-action="Delete" asp-route-id="@appUser.user?.Id" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        }
        else
        {
            <p>No Users have been registered</p>

        }
</tbody>
</table>
