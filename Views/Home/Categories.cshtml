@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // This ensures the view uses the shared layout
    ViewData["Title"] = "Categories";
}

<div class="category-page">
    <header>
        <h1>Categories</h1>
        <p>Explore our wide range of product categories and find the best for you!</p>
    </header>

    <section class="categories-section">
        <!-- Link to the Fruits and Vegetables view for subcategories -->
        <div class="category-button">
            <a href="@Url.Action("FruitsAndVegetables", "Products")">Fruits and Vegetables</a>
        </div>
        
        <!-- Link to the Beverages page -->
        <div class="category-button">
            <a href="@Url.Action("Beverages", "Products")">Beverages</a>
        </div>
        
        <!-- Link to the Dairy, Cheese, and Eggs page -->
        <div class="category-button">
            <a href="@Url.Action("DairyCheeseEggs", "Products")">Dairy, Cheese, and Eggs</a>
        </div>
        
        <!-- Link to the Vegan Products page -->
        <div class="category-button">
            <a href="@Url.Action("VeganProducts", "Products")">Vegan Products</a>
        </div>
    </section>
</div>
