@using webapp_sub1.Models
@model List<webapp_sub1.Models.Subcategory>

<div class="vegan-products-page">
    <h1>Veganske Produkter</h1>

    @foreach (var subcategory in Model) 
    {
        <div class="subcategory">
            <h2 class="subcategory-heading">@subcategory.Name</h2>
            <div class="product-container">
                @if (subcategory.Products != null && subcategory.Products.Any()) 
                {
                    foreach (var product in subcategory.Products) 
                    {
                        <div class="product-card">
                            <div class="product-image">
                                <img src="@Url.Content($"/images/{product.ImageUrl}")" alt="@product.Name" />
                                <div class="product-overlay">
                                    <h3>@product.Name</h3> <!-- Only product name -->
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>Ingen produkter tilgjengelig i denne underkategorien.</p>
                }
            </div>
        </div>
    }
</div>
