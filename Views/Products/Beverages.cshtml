@using webapp_sub1.Models
@model List<webapp_sub1.Models.Subcategory>

<div class="category-page beverages-page">
    <h1>Beverages</h1>

    <!-- Juice Subcategory -->
    <div class="subcategory">
        <h2 class="subcategory-heading">Juice</h2>
        <div class="product-container">
            @foreach (var product in Model.Where(s => s.Name == "Juice").SelectMany(s => s.Products))
            {
                <div class="product-card">
                    <div class="product-image">
                        <img src="@Url.Content($"/images/{product.ImageUrl}")" alt="@product.Name" />
                    </div>
                    <div class="product-overlay">
                        <h3>@product.Name</h3>
                        <p>@product.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>

